<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout"
    android:background="@color/general_background"
    tools:context=".SettingsActivity">
    <LinearLayout
        android:id="@+id/toolBar"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/general_main_bar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_flipper">

        <ImageButton
            android:id="@+id/exit_button"
            android:layout_marginVertical="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/menu_icon_color"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/baseline_keyboard_arrow_left_24"
            android:contentDescription="return_page" />
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/menu_icon_color"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:textColorHint="@color/text_title_color"
            android:text="Settings"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <ScrollView
        android:backgroundTint="@color/white"
        android:background="@color/white"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="Radomize Slide:"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_width="wrap_content"
                     android:layout_weight="1"
                    />

                <CheckBox
                    android:id="@+id/edit_text1"
                    android:padding="8dp"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    style="@style/AppCheckBoxStyle"
                    />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="Recomendation:"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>

                <CheckBox
                    android:id="@+id/edit_text2"
                    android:padding="8dp"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    style="@style/AppCheckBoxStyle"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="Only Exercices:"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>

                <CheckBox
                    android:id="@+id/edit_text0"
                    android:padding="8dp"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    style="@style/AppCheckBoxStyle"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="Only Slides:"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>

                <CheckBox
                    android:id="@+id/edit_text9"
                    android:padding="8dp"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    style="@style/AppCheckBoxStyle"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="Clean Recomendations:"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                   android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>
                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="50dp"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/semi_circle_shape"
                    android:backgroundTint="@color/question_wrong_icon"
                    >

                <ImageButton
                    android:id="@+id/edit_text3"
                    android:backgroundTint="@color/menu_icon_color"
                    android:background="@drawable/baseline_highlight_off_24"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:contentDescription="clean_recomendations" />
                </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="Slide Count"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>

                <EditText
                    android:id="@+id/edit_text4"
                    android:backgroundTint="@color/text_color"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:inputType="numberSigned|numberDecimal"
                    android:autofillHints="0"
                    android:text="0"
                    android:layout_height="75dp"
                    android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="Drawing Count:"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>

                <EditText
                    android:id="@+id/edit_text5"
                    android:backgroundTint="@color/text_color"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:inputType="numberSigned|numberDecimal"
                    android:autofillHints="0"
                    android:text="0"
                    android:layout_height="75dp"
                    android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="Pick the Kana/Romaji:"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>

                <EditText
                    android:id="@+id/edit_text6"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:backgroundTint="@color/text_color"
                    android:inputType="numberSigned|numberDecimal"
                    android:autofillHints="0"
                    android:text="0"
                    android:layout_height="75dp"
                    android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">

                <TextView
                    android:text="Pick the Kanji:"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>

                <EditText
                    android:id="@+id/edit_text7"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:backgroundTint="@color/text_color"
                    android:inputType="numberSigned|numberDecimal"
                    android:autofillHints="0"
                    android:text="0"
                    android:layout_height="75dp"
                    android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="Listening Count:"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"/>

                <EditText
                    android:id="@+id/edit_text8"
                    android:backgroundTint="@color/text_color"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:inputType="numberSigned|numberDecimal"
                    android:autofillHints="0"
                    android:text="0"
                    android:layout_height="75dp"
                    android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                    <TextView
                        android:text="Only Favorite:"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="@color/text_color"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"/>

                    <CheckBox
                        android:id="@+id/edit_text10"
                        android:padding="8dp"
                        android:layout_height="75dp"
                        android:layout_width="75dp"
                        style="@style/AppCheckBoxStyle"/>
                </LinearLayout>
            </GridLayout>
        </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
