<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parent_layout"
    android:background="@color/general_background"
    tools:context=".SettingsActivity">
    <LinearLayout
        android:id="@+id/toolBar"
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/general_main_bar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/view_flipper">

        <ImageButton
            android:id="@+id/exit_button"
            android:layout_marginVertical="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/menu_icon_color"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/baseline_keyboard_arrow_left_24"
            android:contentDescription="@string/return_page" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/menu_icon_color"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:textColorHint="@color/text_title_color"
            android:text="@string/settings"
            />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:gravity="center"
            android:layout_gravity="center"
            />


    </LinearLayout>

    <ScrollView
        android:backgroundTint="@color/white"
        android:background="@color/white"
        android:padding="20dp"
        android:layout_margin="10dp"
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="@string/radomize_slide"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_width="0dp"
                     android:layout_weight="1"
                    />
                <CheckBox
                    android:id="@+id/edit_text1"
                    android:padding="8dp"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    style="@style/AppCheckBoxStyle"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="@string/recomendation"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

                <CheckBox
                    android:id="@+id/edit_text2"
                    android:padding="8dp"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    style="@style/AppCheckBoxStyle"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="@string/only_exercices"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

                <CheckBox
                    android:id="@+id/edit_text0"
                    android:padding="8dp"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    style="@style/AppCheckBoxStyle"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="@string/only_slides"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

                <CheckBox
                    android:id="@+id/edit_text9"
                    android:padding="8dp"
                    android:layout_height="75dp"
                    android:layout_width="75dp"
                    style="@style/AppCheckBoxStyle"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                    <TextView
                        android:text="@string/only_favorite_settings"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="@color/text_color"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"/>

                    <CheckBox
                        android:id="@+id/edit_text10"
                        android:padding="8dp"
                        android:layout_height="75dp"
                        android:layout_width="75dp"
                        style="@style/AppCheckBoxStyle"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="@string/slide_count"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

                <EditText
                    android:id="@+id/edit_text4"
                    android:backgroundTint="@color/text_color"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:inputType="numberSigned|numberDecimal"
                    android:autofillHints="0"
                    android:layout_height="75dp"
                    android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="@string/drawing_count"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

                <EditText
                    android:id="@+id/edit_text5"
                    android:backgroundTint="@color/text_color"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:inputType="numberSigned|numberDecimal"
                    android:autofillHints="0"
                    android:layout_height="75dp"
                    android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="@string/pick_the_kana_romaji"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

                <EditText
                    android:id="@+id/edit_text6"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:backgroundTint="@color/text_color"
                    android:inputType="numberSigned|numberDecimal"
                    android:autofillHints="0"
                    android:layout_height="75dp"
                    android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">

                <TextView
                    android:text="@string/pick_the_kanji"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

                <EditText
                    android:id="@+id/edit_text7"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:backgroundTint="@color/text_color"
                    android:inputType="numberSigned|numberDecimal"
                    android:autofillHints="0"
                    android:layout_height="75dp"
                    android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                <TextView
                    android:text="@string/listening_count"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="@color/text_color"
                    android:layout_height="75dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"/>

                <EditText
                    android:id="@+id/edit_text8"
                    android:backgroundTint="@color/text_color"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:inputType="numberSigned|numberDecimal"
                    android:autofillHints="0"
                    android:layout_height="75dp"
                    android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                    <TextView
                        android:text="@string/Kanji_to_kana"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="@color/text_color"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"/>

                    <EditText
                        android:id="@+id/edit_text11"
                        android:backgroundTint="@color/text_color"
                        android:textAlignment="center"
                        android:textColor="@color/text_color"
                        android:inputType="numberSigned|numberDecimal"
                        android:autofillHints="0"
                        android:layout_height="75dp"
                        android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_row="0"
                    android:background="@drawable/border">
                    <TextView
                        android:text="@string/Kana_to_kanji"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:padding="8dp"
                        android:textColor="@color/text_color"
                        android:layout_height="75dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"/>

                    <EditText
                        android:id="@+id/edit_text12"
                        android:backgroundTint="@color/text_color"
                        android:textAlignment="center"
                        android:textColor="@color/text_color"
                        android:inputType="numberSigned|numberDecimal"
                        android:autofillHints="0"
                        android:layout_height="75dp"
                        android:layout_width="75dp"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <Button
                    style="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
                    android:layout_row="0"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/edit_text3"
                    android:text="@string/clean_recomendations_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/simple_button_color"
                    android:textColor="@color/text_title_color"
                    android:layout_height="60dp"
                    android:layout_width="200dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    />
                <TextView
                    android:text="@string/credits"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingVertical="100dp"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </GridLayout>
        </RelativeLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
