<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:background="@drawable/semi_circle_shape"
    android:backgroundTint="@color/question_wrong_background"
    android:padding="10dp"
    android:layout_height="250dp">

    <TextView
        android:id="@+id/dialog_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="5dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="@string/wrong_awnser"
        android:textAlignment="center"
        android:textColor="@color/question_wrong_text"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circle_shape"
        android:backgroundTint="@color/white"/>

    <ImageView

        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="22dp"
        android:background="@drawable/baseline_close_24"
        android:backgroundTint="@color/question_wrong_icon"></ImageView>
</RelativeLayout>
