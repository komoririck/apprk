<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MenuActivity">

    <LinearLayout
        android:paddingHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/general_main_bar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintVertical_bias="0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/settins_button"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="start"
            app:cardBackgroundColor="@color/general_main_bar"
            app:cardCornerRadius="4dp">
            <ImageView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/baseline_settings_24"
                app:tint="@color/menu_icon_color" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/menu_icon_color"
            android:gravity="center"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:textColorHint="@color/text_title_color"
            android:text="Remembering Japanese"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/forwardButton"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
            android:layout_marginVertical="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#6A9B2A"
            android:textColor="@color/white"
            android:text="Start"
            android:drawableEnd="@drawable/baseline_arrow_circle_right_24"
            android:drawableTint="#76B622" />

    </LinearLayout>

    <ScrollView
        android:layout_marginTop="100dp"
        android:id="@+id/scrollview_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="15"
            android:layout_margin="10dp"
            android:columnCount="2">

            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="50sp"
                android:fontFamily="cursive"
                android:textColor="@color/text_color"
                android:text="Kana"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:clickable="false"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button1"
                android:text="Hiragana"
                android:clickable="true"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_row="2"
                android:textColor="@color/menu_icon_color"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:background="@drawable/menu_cardview_default_border"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button2"
                android:clickable="true"
                android:text="Katakana"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:textColor="@color/menu_icon_color"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>

            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="50sp"
                android:fontFamily="cursive"
                android:textColor="@color/text_color"
                android:text="Kanji"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button3"
                android:text="Kanji N5"
                android:clickable="true"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_row="4"
                android:layout_column="0"
                android:textColor="@color/menu_icon_color"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:focusable="true">


            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button4"
                android:clickable="true"
                android:text="Kanji N4"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_row="4"
                android:layout_column="1"
                android:textColor="@color/menu_icon_color"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button5"
                android:clickable="true"
                android:text="Kanji N3"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_row="5"
                android:textColor="@color/menu_icon_color"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button6"
                android:clickable="true"
                android:text="Kanji N2"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:textColor="@color/menu_icon_color"
                android:layout_height="150dp"
                android:layout_row="5"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button7"
                android:clickable="false"
                android:text="Kanji N1"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_row="6"
                android:layout_column="0"
                android:textColor="@color/menu_icon_color"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:drawableBottom="@drawable/baseline_construction_24"
                android:drawableTint="@color/menu_icon_color"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>

            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="50sp"
                android:fontFamily="cursive"
                android:textColor="@color/text_color"
                android:text="Word"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_columnSpan="2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button8"
                android:text="Word N5"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_rowWeight="8"
                android:textColor="@color/menu_icon_color"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button10"
                android:text="Word N4"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_rowWeight="8"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:textColor="@color/menu_icon_color"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button11"
                android:text="Word N3"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_rowWeight="9"
                android:textColor="@color/menu_icon_color"
                android:layout_column="0"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button12"
                android:text="Word N2"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:textColor="@color/menu_icon_color"
                android:layout_height="150dp"
                android:layout_rowWeight="9"
                android:layout_column="1"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:drawableBottom="@drawable/baseline_construction_24"
                android:drawableTint="@color/menu_icon_color"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button13"
                android:text="Word N1"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_rowWeight="10"
                android:layout_column="0"
                android:textColor="@color/menu_icon_color"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:drawableBottom="@drawable/baseline_construction_24"
                android:drawableTint="@color/menu_icon_color"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>

            <TextView
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="50sp"
                android:fontFamily="cursive"
                android:textColor="@color/text_color"
                android:text="Dictionary"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:clickable="false"
                android:layout_row="11"
                android:layout_column="0"
                android:layout_columnSpan="2"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_row="12"
                android:layout_column="0"
                android:text="Word"
                android:id="@+id/button14"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_margin="20dp"
                android:textColor="@color/menu_icon_color"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:focusable="true">

            </androidx.appcompat.widget.AppCompatButton>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_row="12"
                android:layout_column="1"
                android:id="@+id/button15"
                android:text="Kanji"
                android:fontFamily="cursive"
                android:textSize="27sp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:textColor="@color/menu_icon_color"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@drawable/menu_cardview_default_border"
                android:focusable="true">


            </androidx.appcompat.widget.AppCompatButton>
            <View
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_columnSpan="2"/>

        </GridLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>